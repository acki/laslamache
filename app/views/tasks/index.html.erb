<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Text</th>
    <th>Price</th>
    <th>Location</th>
  </tr>

<% for task in @tasks %>
  <tr>
    <td><%=h task.title %></td>
    <td><%=h task.description %></td>
    <td><%=h task.text %></td>
    <td><%=h task.price %></td>
    <td><%=h task.location %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>
