<h1>Benutzer</h1>

<table>
  <tr>
    <th>Login</th>
    <th>E-Mail</th>
    <th>Rollen</th>
  </tr>

  <% for user in @users %>
    <tr>
      <td><%=h user.login %></td>
      <td><%=h user.email %></td>
      <td><%=h user.roles %></td>
      <td>
        <%= link_to 'Bearbeiten', edit_user_path(user) %> |
        <%= link_to 'Passwort ändern', edit_user_path(user) %> |
        <%= link_to 'Löschen', user, :confirm => 'Are you sure?', :method => :delete %>
      </td>
    </tr>
  <% end %>
</table>

<br />

<%= link_to 'Neuer Benutzer', new_user_path %>
